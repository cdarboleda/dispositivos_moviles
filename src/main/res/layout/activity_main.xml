<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dm"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">


    <TextView
        android:id="@+id/textView2"
        style="@style/textTitle"
        android:layout_width="371dp"
        tools:text="@string/app_name_menu"
        android:hint="@string/app_name_menu"
        android:layout_height="94dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="left"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/button2"
        style="@style/ButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Soy un botón de cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_buscar"
        app:layout_constraintVertical_bias="0.546" />

    <Button
        android:id="@+id/button1"
        style="@style/ButtonsGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Soy un botón"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintVertical_bias="0.885" />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="68dp"
        android:background="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="center_vertical"
        android:text="Search"
        android:hint="Username"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="132dp"
        android:background="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="center_vertical"
        android:text="Search"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/banner_principal"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:srcCompat="@drawable/baseline_tune_24"
        tools:layout_editor_absoluteX="254dp" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/ButtonMenu"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:layout_marginTop="384dp"
        tools:text="Ingresar"
        android:hint="Ingresar"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="123dp" />


</androidx.constraintlayout.widget.ConstraintLayout>